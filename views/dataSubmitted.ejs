<!-- views/pages/index.ejs -->

 

<!DOCTYPE html>

<html lang="fr">

<head>

    <%- include('partials/head') %>

</head>

<body class="container">

 

    <header>

        <%- include('partials/header') %>
        
    </header>

 

    <main>

        <div class="jumbotron">

            <h1>express</h1>

            <p>Page de storage de donnees</p>

            <table class="table table-bordered table-striped">
            <thead>
                <tr>
                <th>Champ</th>
                <th>Valeur</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                <td>Type de pizza</td>
                <td><%= InfoPizza.pizzaType %></td>
                </tr>
                <tr>
                <td>Quantité</td>
                <td><%= InfoPizza.pizzaQuantity %></td>
                </tr>
                <tr>
                <td>Taille</td>
                <td><%= InfoPizza.pizzaSize %></td>
                </tr>
                <tr>
                <td>Extras</td>
                <td>
                    <% if (Array.isArray(InfoPizza.extras)) { %>
                    <%= InfoPizza.extras.join(', ') %>
                    <% } else { %>
                    <%= InfoPizza.extras %>
                    <% } %>
                </td>
                </tr>
                <tr>
                <td>Adresse</td>
                <td><%= InfoPizza.address %></td>
                </tr>
                <tr>
                <td>Code Postal</td>
                <td><%= InfoPizza.codePostal %></td>
                </tr>
                <tr>
                <td>Nom</td>
                <td><%= InfoPizza.nom %></td>
                </tr>
                <tr>
                <td>Prénom</td>
                <td><%= InfoPizza.prenom %></td>
                </tr>
                <tr>
                <td>Téléphone</td>
                <td><%= InfoPizza.telephone %></td>
                </tr>
                <tr>
                <td>Courriel</td>
                <td><%= InfoPizza.courriel %></td>
                </tr>
                <tr>
                <td>Méthode de paiement</td>
                <td><%= InfoPizza.modePaiement %></td>
                </tr>
                <tr>
                <td>Prix de la commande</td>
                <td><%= InfoPizza.prixBase %></td>
                </tr>
                <tr>
                <td>Prix total</td>
                <td><%= InfoPizza.prixTotal %></td>
                </tr>
            </tbody>
            </table>


        </div>

    </main>

 

    <footer>

        <%- include('partials/footer') %>

    </footer>

   

</body>

</html>