<!DOCTYPE html>

<html lang="fr">

<head>

    <%- include('partials/head') %>

</head>

<body class="container">



    <header>

        <%- include('partials/header') %>

    </header>



    <main>

        <div class="bg-blur"></div>
        <div class="container position-relative" style="z-index:1;">


            <div class="jumbotron bg-opacity-40 rounded">

                <h1>Votre Commande</h1>

                <h2>Recu</h2>

                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Champ</th>
                            <th>Valeur</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Type de pizza</td>
                            <td>
                                <%= InfoPizza.pizzaType %>
                            </td>
                        </tr>
                        <tr>
                            <td>Quantité</td>
                            <td>
                                <%= InfoPizza.pizzaQuantity %>
                            </td>
                        </tr>
                        <tr>
                            <td>Taille</td>
                            <td>
                                <%= InfoPizza.pizzaSize %>
                            </td>
                        </tr>
                        <tr>
                            <td>Extras</td>
                            <td>
                                <% let extrasArr=Array.isArray(InfoPizza.extras) ? InfoPizza.extras : (InfoPizza.extras
                                    ? [InfoPizza.extras] : []); %>
                                    <%= extrasArr.length ? extrasArr.join(', ') : ' Aucun' %>
                            </td>
                        <tr>
                            <td>Adresse</td>
                            <td>
                                <%= InfoPizza.address %>
                            </td>
                        </tr>
                        <tr>
                            <td>Code Postal</td>
                            <td>
                                <%= InfoPizza.codePostal %>
                            </td>
                        </tr>
                        <tr>
                            <td>Nom</td>
                            <td>
                                <%= InfoPizza.nom %>
                            </td>
                        </tr>
                        <tr>
                            <td>Prénom</td>
                            <td>
                                <%= InfoPizza.prenom %>
                            </td>
                        </tr>
                        <tr>
                            <td>Téléphone</td>
                            <td>
                                <%= InfoPizza.telephone %>
                            </td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td>
                                <%= InfoPizza.email %>
                            </td>
                        </tr>
                        <tr>
                            <td>Méthode de paiement</td>
                            <td>
                                <%= InfoPizza.modePaiement %>
                            </td>
                        </tr>
                        <tr>
                            <td>Prix de la commande</td>
                            <td>
                                <%= InfoPizza.prixBase %>
                            </td>
                        </tr>
                        <tr>
                            <td>Taxes</td>
                            <td>
                                <%= InfoPizza.taxe %>
                            </td>
                        </tr>
                        <tr>
                            <td>Prix total</td>
                            <td>
                                <%= InfoPizza.prixTotal %>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

    </main>



    <footer>

        <%- include('partials/footer') %>

    </footer>



</body>

</html>